    <script>
        // Translation dictionary
        const translations = {
          en: {
            welcome: "Welcome to Our Website",
            intro: "This is a simple demo of language switcher."
          },
          hi: {
            welcome: "हमारी वेबसाइट पर आपका स्वागत है",
            intro: "यह भाषा बदलने का एक सरल डेमो है।"
          }
        };

        // Set default language
        function setLanguage(lang) {
          document.querySelectorAll("[data-translate]").forEach(el => {
            let key = el.getAttribute("data-translate");
            el.innerText = translations[lang][key];
          });

          // Save preference in localStorage
          localStorage.setItem("site-lang", lang);
        }

        // On page load, apply saved language or default to English
        window.onload = () => {
          let savedLang = localStorage.getItem("site-lang") || "en";
          document.getElementById("langSwitcher").value = savedLang;
          setLanguage(savedLang);
        };
    </script>
    <script>
        window.addEventListener('scroll', function () {
