            if (window.scrollY > 100) {
                logoItem.style.display = 'inline-block';
            } else {
                logoItem.style.display = 'none';
            }
        });
    </script>

    <script>
        function adjustTickerWidth() {
            const ticker = document.querySelector('.ticker');
            const tickerItems = document.querySelectorAll('.ticker-item');
            let totalWidth = 0;

            tickerItems.forEach(item => {
                totalWidth += item.offsetWidth;
            });
            ticker.style.width = `${totalWidth}px`;
        }

        window.addEventListener('load', adjustTickerWidth);
        window.addEventListener('resize', adjustTickerWidth);
    </script>
